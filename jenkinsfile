pipeline {
    agent any
    environment {
        SONARQUBE_SERVER = 'sonarserver' // Jenkins SonarQube configuration
        NEXUS_URL = 'http://52.66.199.22:8081/'
        NEXUS_CREDENTIALS_ID = 'NexusLogins'
        DOCKER_HUB_CREDENTIALS = 'dockerid'
        DOCKER_IMAGE = 'vishnusoman85/react-app'
        DOCKER_TAG = "1.0.${BUILD_NUMBER}"
    }
    stages {
        stage('Checkout Code') {
            steps {
                git credentialsId: 'github-credentials', url: 'https://github.com/thejungwon/docker-reactjs.git'
            }
        }

        stage('Code Analysis with SonarQube') {
            steps {
                withSonarQubeEnv('sonarserver') {
                    sh 'npm install'
                    sh 'npx sonar-scanner'
                }
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npm test'
            }
        }
    }
}
