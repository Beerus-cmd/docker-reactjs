pipeline {
    agent any
    environment {
        SONARQUBE_SERVER = 'sonarserver' // Jenkins SonarQube configuration
        NEXUS_URL = 'http://52.66.199.22:8081/'
        DOCKER_HUB_CREDENTIALS = 'dockerid'
        DOCKER_IMAGE = 'vishnusoman85/react-app'
        DOCKER_TAG = "1.0.${BUILD_NUMBER}"
        NEXUSPASS = credentials('NexusLogin')
        NEXUS_LOGIN = 'nexuslogin'
        NEXUS_CREDENTIALS_ID = 'nexuslogin'
    }
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'master', credentialsId: 'githubpass', url: 'https://github.com/Beerus-cmd/docker-reactjs.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('CODE ANALYSIS with SONARQUBE') {
            steps {
                withSonarQubeEnv("${SONARQUBE_SERVER}") {
                    sh '''
                    npx -Dsonar.projectKey=docker-reactjs -Dsonar.sources=.
                    '''
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${DOCKER_IMAGE}:${DOCKER_TAG}")
                }
            }
        }

        stage('Push Docker Image to Nexus') {
            steps {
                nexusArtifactUploader(
                    nexusVersion: 'nexus3',
                    protocol: 'http',
                    nexusUrl: "${NEXUS_URL}",
                    repository: 'docker-releases',
                    credentialsId: "${NEXUS_CREDENTIALS_ID}",
                    artifacts: [[artifactId: 'react-app', classifier: '', file: '', type: 'docker', version: "${DOCKER_TAG}"]]
                )
            }
        }
    }
}

